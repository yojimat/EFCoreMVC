@model UniversidadeDeContoso.Models.Departamento

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@ViewData["MensagemErroConcorrencia"]</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Orcamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Orcamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataComeco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataComeco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Administrador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Administrador.NomeCompleto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartamentoId" />
        <input type="hidden" asp-for="VersaoFileira" />
        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar para a lista</a>
        </div>
    </form>
</div>
