@model UniversidadeDeContoso.Models.Curso

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusão</h1>

<h3>Tem certeza que você quer excluir este curso?</h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CursoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CursoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Creditos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creditos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departamento.Nome)
