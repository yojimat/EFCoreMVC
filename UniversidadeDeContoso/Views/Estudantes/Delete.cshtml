@model UniversidadeDeContoso.Models.Estudante

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<p class="text-danger">@ViewData["MensagemDeErro"]</p>

<h3>Tem certeza que deseja remover este estudante?</h3>
<div>
    <h4>Estudante</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SobreNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SobreNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeMatricula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataDeMatricula)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
